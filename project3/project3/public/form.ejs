                        <td class="rice">
                            <input type="radio" name="rating" value="üçöüçö" id="rate2">
                            <label for="rate2">üçö</label>
                        </td>
                        <td class="rice">
                            <input type="radio" name="rating" value="üçöüçöüçö" id="rate3">
                            <label for="rate3">üçö</label>
                        </td>
                        <td class="rice">
                            <input type="radio" name="rating" value="üçöüçöüçöüçö" id="rate4">
                            <label for="rate4">üçö</label>
                        </td>
                        <td class="rice">
                            <input type="radio" name="rating" value="üçöüçöüçöüçöüçö" id="rate5">
                            <label for="rate5">üçö</label>
                        </td>
                    </tr>
                        <% /* Review Section */ %>
               <tr>
                <th colspan="5">4. REVIEW</th>
            </tr>
            <tr>
                <td colspan="5"><textarea max-length = "800" name="review" placeholder="Record the tale of your tasting experience..." required></textarea></td>
            </tr>
       
        <% /* Photo Section */ %>
            <tr>
                <th colspan="5">5. ADD PHOTO</th>
            </tr>
            <tr>
                <td colspan="5"><input type="file" name="photo" accept="image/*" required></td>
            </tr>
        <% /* Link Section */ %>
            <tr>
                <th colspan="5">6. LINK</th>
            </tr>
            <tr>
                <td colspan="5"><input type="url" name="link" placeholder="Reveal the path to this sacred dish" required></td>
            </tr>
        </table>
        </div> 
