        <form id="form" method="POST" action="/submit" enctype="multipart/form-data">
            <input type="text" id="dish" name="dish" placeholder="Name of the Dish">
            <div class="table-container part1">
                <table class="review-table">
                    <% /* Restaurant or Recipe */ %>
            <tr>
                <th colspan="4">1. FROM RESTAURANT or RECIPE?</th>
            </tr>
            <tr>
                <td class="R">Restaurant</td>
                <td><input type="checkbox" name="category" value="Restaurant"></td>
                <td class="R">Recipe</td>
                <td><input type="checkbox" name="category" value="Recipe"></td>
            </tr>
            <% /* Flavors Section */ %>
                    <tr>
                        <th colspan="4">2. FLAVORS & DIET (check all that apply)</th>
                    </tr>
                    <tr>
                        <td class="flavor">Spicy</td>
                        <td><input type="checkbox" name="flavor" value="#spicy"></td>
                        <td class="flavor">Vegan</td>
                        <td><input type="checkbox" name="flavor" value="#vegan"></td>
                    </tr>
                    <tr>
                        <td class="flavor">Savory</td>
                        <td><input type="checkbox" name="flavor" value="#savory"></td>
                        <td class="flavor">Vegetarian</td>
                        <td><input type="checkbox" name="flavor" value="#vegetarian"></td>
                    </tr>
                    <tr>
                        <td class="flavor">Sour</td>
                        <td><input type="checkbox" name="flavor" value="#sour"></td>
                        <td class="flavor">Dairy-free</td>
                        <td><input type="checkbox" name="flavor" value="#dairy-free"></td>
                    </tr>
                    <tr>
                        <td class="flavor">Sweet</td>
                        <td><input type="checkbox" name="flavor" value="#sweet"></td>
                        <td class="flavor">Gluten-free</td>
                        <td><input type="checkbox" name="flavor" value="#gluten-free"></td>
                    </tr>
                    <tr>
                        <td class="flavor">Bitter</td>
                        <td><input type="checkbox" name="flavor" value="#bitter"></td>
                        <td class="flavor"><input type="text" name="other" placeholder="Other" id="other"></td>
                        <td><input type="checkbox" name="isOtherChecked"></td>
                    </tr>
                </table>
            </div>
        
            <div class="table-container part2">
                <table class="review-table">
                    <% /* Rating Section */ %>
                    <tr>
                        <th colspan="5">3. RATE it out of '5 bowls of rice'</th>
                    </tr>
                    <tr class="rating-row">
                        <td class="rice">
